<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:context=".EachStockInfo">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/buy_or_drop_app_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/StockInfoLayout"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/BackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/pure_trans"
                android:src="@drawable/back_button_30"
                android:text="이전화면으로"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.appcompat.widget.Toolbar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/StockInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toBottomOf="@id/buy_or_drop_app_bar"
        app:layout_constraintBottom_toTopOf="@id/StockButtonLayout">

        <LinearLayout
            android:id="@+id/ReciveStockLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toStartOf="@id/RecivePriceLayout"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                style="@style/buy_or_drop_title_style"
                android:text="주식이름" />

            <TextView
                android:id="@+id/ReciveStockName"
                style="@style/buy_or_drop_value_style"
                tools:text="주식명" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RecivePriceLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toStartOf="@id/sidmoneyLayout"
            app:layout_constraintStart_toEndOf="@id/ReciveStockLayout">

            <TextView
                style="@style/buy_or_drop_title_style"
                android:text="가격(원)" />

            <TextView
                android:id="@+id/ReciveStockPrice"
                style="@style/buy_or_drop_value_style"
                tools:text="10000" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sidmoneyLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/RecivePriceLayout"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="시드 머니">

            <TextView
                style="@style/buy_or_drop_title_style"
                android:text="시드 머니" />

            <TextView
                android:id="@+id/sidmoney"
                style="@style/buy_or_drop_value_style"
                tools:text="시드 머니" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:id="@+id/StockButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:layout_constraintVertical_weight="1"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/StockInfoLayout"
    app:layout_constraintBottom_toTopOf="@id/chart"
    >
    <android.widget.Button
        android:id="@+id/Buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_or_drop_button_shape"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/default_text_color"
        android:text="매수" />

    <android.widget.Button
        android:id="@+id/Sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_or_drop_button_shape"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/default_text_color"
        android:text="매도" />
</LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="6"
        app:layout_constraintTop_toBottomOf="@id/StockButtonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>