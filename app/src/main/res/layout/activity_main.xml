<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Stock Game"
        android:textSize="50dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/StartBtn"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.widget.Button
        android:id="@+id/StartBtn"
        style="@style/main_menu_button_style"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/HelpBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="게임시작"/>

    <android.widget.Button
        android:id="@+id/HelpBtn"
        style="@style/main_menu_button_style"
        app:layout_constraintTop_toBottomOf="@id/StartBtn"
        app:layout_constraintBottom_toTopOf="@id/HaveNoSidemoney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="도움말"/>

    <android.widget.Button
        android:id="@+id/HaveNoSidemoney"
        style="@style/main_menu_button_style"
        app:layout_constraintTop_toBottomOf="@id/HelpBtn"
        app:layout_constraintBottom_toTopOf="@id/QuitBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:text="돈을 다썻을때 버튼"/>

    <android.widget.Button
        android:id="@+id/QuitBtn"
        style="@style/main_menu_button_style"
        app:layout_constraintTop_toBottomOf="@id/HaveNoSidemoney"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="종료"/>


</androidx.constraintlayout.widget.ConstraintLayout >